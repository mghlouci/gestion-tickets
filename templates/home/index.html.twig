{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block stylesheets %}
<style>
    .dashboard-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-link {
        text-decoration: none;
        color: inherit;
    }

    .card-hover:hover {
        background-color: #f0f0f0;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s, box-shadow 0.3s;
    }

    .card-img-top {
        max-height: 150px;
        object-fit: contain;
        padding: 1rem;
    }

    .card {
        height: 100%;
        min-height: 300px;
    }
</style>
{% endblock %}

{% block body %}
<h1 class="text-center mb-5">Bienvenue {{ app.user.email }}</h1>

<div class="dashboard-container">
    <div class="row row-cols-1 row-cols-md-3 g-4 w-100">
        <div class="col">
            <a href="{{ path('app_ticket_index') }}" class="card-link">
                <div class="card text-center card-hover border-dark">
                    <img src="{{ asset('images/Ticket.jpg') }}" class="card-img-top mx-auto" alt="Tickets">
                    <div class="card-body">
                        <h5 class="card-title">Tickets</h5>
                        <p class="card-text">Gérez et suivez les tickets.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="{{ path('app_projet_index') }}" class="card-link">
                <div class="card text-center card-hover border-dark">
                    <img src="{{ asset('images/Projet.png') }}" class="card-img-top mx-auto" alt="Projets">
                    <div class="card-body">
                        <h5 class="card-title">Projets</h5>
                        <p class="card-text">Organisez vos projets efficacement.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a href="{{ path('app_client_index') }}" class="card-link">
                <div class="card text-center card-hover border-dark">
                    <img src="{{ asset('images/Client.jpg') }}" class="card-img-top mx-auto" alt="Clients">
                    <div class="card-body">
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text">Gérez vos clients simplement.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}
